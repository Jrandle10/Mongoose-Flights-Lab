<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/edit.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights/<%= flight._id %>?_method=PUT" method="POST">
    <label for="airline-input">Airline:
      <input type="text" name="airline" value="<%= flight.airline %>" id="airline-input">
    </label><br>
    <label for="airport-input">Airport:
      <select name="airport" id="airport-select">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN" selected>DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
      </select>
    </label><br>
    <label for="flight-no-input">Flight No: 
      <input type="number" name="flightNo" value="<%= flight.flightNo %>" id="flight-no-input">
    </label><br>
    <label for="departs-input">Departs:
      <input type="datetime-local" name="departs" value="<%= flight.departs %>">
    </label><br>
    <button type="submit">Save Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>